header
    div.header__logo
        a(href="/")
            i.fab.fa-youtube
            span.header__title Wetube
    nav
        ul
            li 
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/users/logout") Log Out
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl.startsWith("uploads")
                            img.header__avatar(src="/" + loggedInUser.avatarUrl, width="100", height="100").avatar
                        else
                            img.header__avatar(src=loggedInUser.avatarUrl, width="100", height="100").avatar
            else
                li 
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join